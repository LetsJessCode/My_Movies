<p id="notice"><%= notice %></p>

<h1>Shows</h1>

<table>
  <thead>
    <tr>
      <th>Movie</th>
      <th>Title</th>
      <th>Genre</th>
      <th>Time</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shows.each do |show| %>
      <tr>
        <td><%= image_tag(show.preview, width: '150px') %></td>
        <td><%= show.title %></td>
        <td><%= show.genre %></td>
        <td><%= show.time %> min </td>
        <td><%= show.rating %></td>
        <% if current_user && current_user.admin? %>
        <td><%= link_to 'Show', show %></td>
        <td><%= link_to 'Edit', edit_show_path(show) %></td>
        <td><%= link_to 'Destroy', show, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


